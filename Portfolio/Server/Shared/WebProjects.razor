                </p>
            </Text>
            <Tech>
                <img src="./img/techLogo/html.svg" alt="ikona HTML" width="25" height="25"/>
                <img src="./img/techLogo/css.svg" alt="ikona CSS" width="25" height="25"/>
                <img src="./img/techLogo/javascript.svg" alt="ikona Javascript" width="25" height="25"/>
            </Tech>
        </ProjectCard>
        <ProjectCard Github="https://github.com/Radekk0002/Calculator2" Website="https://smallprojects.radekkisiel.pl/calculator" Path="./img/projects/web/SmallProjects/calculator.png" BorderColor="yellow">
            <Text>
                <h6>Calculator</h6>
                <p class="d-flex justify-content-center align-items-center m-3">
                    Calculator with order of operations
                </p>
            </Text>
            <Tech>
                <img src="./img/techLogo/html.svg" alt="ikona HTML" width="25" height="25"/>
                <img src="./img/techLogo/css.svg" alt="ikona CSS" width="25" height="25"/>
                <img src="./img/techLogo/javascript.svg" alt="ikona Javascript" width="25" height="25"/>
            </Tech>
        </ProjectCard>
    </CascadingValue>
</ProjectsContainer>

@code {
    internal ProjectsContainer projectsContainer;

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback OnLoadedProjects { get; set; }

}

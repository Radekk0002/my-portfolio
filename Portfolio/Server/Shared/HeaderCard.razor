<div class="
            w-100
            d-flex
            flex-column flex-sm-row
            align-items-sm-center
            justify-content-sm-center
            sectionCard
            m-auto
        ">
    <div>
        <h3 class="
                mt-3
                ml-4
                mb-1
                mt-sm-0
                ml-sm-0
                mb-sm-0
                pl-4
            ">
            @Title
        </h3>
    </div>
    <div>
        @ChildContent
    </div>
</div>
@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}

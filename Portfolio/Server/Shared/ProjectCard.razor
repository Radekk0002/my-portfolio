@implements IDisposable

<div class="projectCard m-2 @Classes">
    <div class="mb-3"><img src="@Path" alt="" width="340" height="340"/></div>
    <div class="
                d-flex
                flex-column
                align-items-center
            ">
        @Text
    </div>
    <div class="
            linkButtons
            d-flex
            justify-content-center
            align-items-center
            m-2
            p-0
        ">
        @if (Website != null)
        {
            <a class="
                d-flex
                justify-content-around
                align-items-center
                mr-2
                p-1
            "
               href="@Website"
               target="_blank">Website</a>
        }
        @if (Github != null)
        {
            <a class="
                d-flex
                justify-content-around
                align-items-center
                ml-2
                p-1
            "
               href="@Github"
               target="_blank">
                Github<img src="./img/github.svg"
                           alt="ikona github" width="24" height="24"/>
            </a>
        }
    </div>
    <div class="
                usedTech
                d-flex
                justify-content-center
                align-items-center
                m-3
            ">
        @Tech
    </div>
    <div class="bottBorder @BorderColor"></div>
</div>



@code {

    [CascadingParameter]
    public ProjectsContainer ParentComponent { get; set; }

    [Parameter]
    public string Classes { get; set; }

    [Parameter]
    public string Path { get; set; }

    [Parameter]
    public string Website { get; set; }

    [Parameter]
    public string Github { get; set; }

    [Parameter]
    public RenderFragment Text { get; set; }

    [Parameter]
    public RenderFragment Tech { get; set; }

    [Parameter]
    public string BorderColor { get; set; }


    protected override void OnInitialized()
    {
        ProjectsContainer.cards.Add(this);

        base.OnInitialized();
    }

    public void Dispose()
    {
        ProjectsContainer.cards.Remove(this);
    }

}
